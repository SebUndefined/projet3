{% extends "layout.html.twig" %}

{% block title %}Home{% endblock %}

{% block content %}
	
    <div class="row">
    <div class="col-lg-8 col-md-8 col-sm-12">
    	<div class="col-xs-12">
           <div class="sub-header header-blue">
                Catégorie {{ articles|first.categorie.name }}
           </div>
           <i class="fa fa-caret-down fa-caret-down-green fa-5x"></i>
        </div>
        
    {% for article in articles %}
    <div class="col-xs-12">
    	<div class="row">
    	<div class="col-md-3">
    	<img src="{{asset(article.img) }}" class="preview-pic">
    	</div>
    	<div class="col-md-9">
    	<h2 class="preview-title">{{ article.title }}</h2>
    	<p class="text-muted">Catégorie:  <a href="{{ article.categorie.slug }}">{{ article.categorie.name }}</a></p>
    	<p class="info">{{ article.content|slice(0,200) }}...</p>
    	<a href="../article/{{ article.slug }}">Lire la suite...</a>
    	</div>
    	
    	</div>
    	<hr>
    </div>			
    	
    {% endfor %}
    </div>
    <div class="col-lg-4 col-md-4 col-sm-12">
                <div class="col-xs-12">
    				<div class="sub-header header-aside">
                           Catégories
    				</div>
        			<i class="fa fa-caret-down fa-caret-down-black fa-5x"></i>
    			</div>
    			<div class="col-xs-12">
    				<ul class="list-group">
            			
        			</ul>
    			</div>
	</div> 
	</div>


{% endblock %}