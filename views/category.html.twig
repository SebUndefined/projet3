{% extends "layout.html.twig" %}

{% block title %}Home{% endblock %}

{% block content %}
	
    <div class="row">
    <div class="col-lg-8 col-md-8 col-sm-12">
    	<div class="col-xs-12">
           <div class="sub-header header-blue">
                Catégorie {{ articles|first.categorie.name }}
           </div>
           <i class="fa fa-caret-down fa-caret-down-green fa-5x"></i>
        </div>
    {% for article in articles %}
    	<div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
    				<a href="../article/{{ article.slug }}">
                    <div class="hovereffect" style="background-image: url({{asset(article.img) }})">
                   
                    <div class="overlay">
                        <h2>{{ article.title }}</h2>
                        <p class="info">{{ article.content|slice(0,100) }}...</p>
                    </div>
                    </div>
                    </a>
    	</div>
    {% endfor %}
    </div>
    <div class="col-lg-4 col-md-4 col-sm-12">
                <div class="col-xs-12">
    				<div class="sub-header header-aside">
                           Catégories
    				</div>
        			<i class="fa fa-caret-down fa-caret-down-black fa-5x"></i>
    			</div>
    			<div class="col-xs-12">
    				<ul class="list-group">
            			
        			</ul>
    			</div>
	</div> 
	</div>


{% endblock %}