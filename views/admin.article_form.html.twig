{% extends 'admin.layout.html.twig' %}
{% block title %}{{ title }}{% endblock %}

{% block content %}
<h2 class="text-center">{{ block('title') }}</h2>
{% for flashMessage in app.session.flashbag.get('success') %}
<div class="alert alert-success">
    {{ flashMessage }}
</div>
{% endfor %}
{% for flashMessage in app.session.flashbag.get('error') %}
<div class="alert alert-danger">
    {{ flashMessage }}
</div>
{% endfor %}
<div class="row">
	<div class="col-lg-12">
    {{ form_start(articleForm) }}
        <div class="form-group">
        {{ form_label(articleForm.title, null)}}
        
            {{ form_errors(articleForm.title) }}
            {{ form_widget(articleForm.title, { 'attr':  {
                'class': 'form-control'
            }}) }}
        
    	</div>
    	<div class="form-group">
        {{ form_label(articleForm.content, null) }}
            {{ form_errors(articleForm.content) }}
            {{ form_widget(articleForm.content, { 'attr':  {
                'class': 'form-control tinymce',
            }})}}
    	</div>
    	<div class="form-group">
        {{ form_label(articleForm.author, null) }}
            {{ form_errors(articleForm.author) }}
            {{ form_widget(articleForm.author, { 'attr':  {
                'class': 'form-control'
            }}) }}
    	</div>
        <div class="form-group">
        {{ form_label(articleForm.categorie, null) }}
            {{ form_errors(articleForm.categorie) }}
            {{ form_widget(articleForm.categorie, { 'attr':  {
                'class': 'form-control'
            }}) }}
    	</div>
    	{% if articleForm.vars.value.img == true %}
    	<div>
    	<p>Image actuelle :</p>
    	<img src="{{ asset(articleForm.vars.value.img) }}" style="width:304px;">
    	</div>
    	{% endif %}
    	<div class="form-group">
        {{ form_label(articleForm.img, null) }}
            {{ form_errors(articleForm.img) }}
            {{ form_widget(articleForm.img, { 'attr':  {
                'class': 'form-control'
            }}) }}
    	</div>
    	<div class="form-group">
        {{ form_label(articleForm.published, null) }}
            {{ form_errors(articleForm.published) }}
            {{ form_widget(articleForm.published, { 'attr':  {
                'class': 'form-control'
            }}) }}
    	</div>
    <div class="form-group">
        <div class="">
            <input type="submit" class="btn btn-primary" value="Sauvegarder !" />
        </div>
    </div>
    {{ form_end(articleForm) }}
    </div>

</div>



{% endblock %}